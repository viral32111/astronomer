{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build",
			"command": "/usr/bin/gcc",
			"args": [
				"-Wall",
				"-fdiagnostics-color=always",
				"-g",
				"`pkg-config --cflags gtk+-3.0`",
				"${workspaceFolder}/source/main.c",
				"-o",
				"${workspaceFolder}/build/helloworld",
				"`pkg-config --libs gtk+-3.0`"
			],
			"options": { "cwd": "${workspaceFolder}/build" },
			"problemMatcher": [ "$gcc" ],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
